{
  "name": "v-wave",
  "version": "1.0.3",
  "description": "The material-ripple directive for Vue that actually works",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.js",
  "types": "dist/types",
  "files": [
    "dist/**/*",
    "nuxt/**/*"
  ],
  "scripts": {
    "test": "exit 0",
    "build": "rollup --config",
    "dev": "npm run build -- --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justintaddei/v-wave.git"
  },
  "keywords": [
    "vue",
    "directive",
    "wave",
    "ripple",
    "v-ripple",
    "vue-ripple",
    "v-ripple-effect",
    "v-ripple-directive",
    "material",
    "material ripple",
    "animation"
  ],
  "author": "Justin Taddei <justin@justintaddei.com> (https://justintaddei.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/justintaddei/v-wave/issues"
  },
  "homepage": "https://github.com/justintaddei/v-wave#readme",
  "devDependencies": {
    "prettier": "^2.0.5",
    "rollup": "^2.22.1",
    "rollup-plugin-typescript2": "^0.27.1",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.7",
    "vue": "^2.6.11",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "rollup-plugin-uglify": "^6.0.4"
  }
}
